// Form Styles
form
	input[type="text"]
	input[type="week"]
	input[type="url"]
	input[type="time"]
	input[type="tel"]
	input[type="password"]
	input[type="search"]
	input[type="number"]
	input[type="email"]
	input[type="date"]
	select
	textarea
		border 2px solid #DDD
		padding 15px
		transition main-transition-seconds !important
		
		&.wpcf7-not-valid
			border-color error-bg-colour !important
			
		&:focus
			border-color default-colour !important

	textarea
		min-width 100%
		max-width 100%
		min-height 120px
		max-height 200px
		margin-bottom -7px

	select
		background url('/images/svgs/select-arrow.svg')
		background-position 96% 50%
		background-repeat no-repeat

	input[type="submit"]
	button
		transition main-transition-seconds !important

